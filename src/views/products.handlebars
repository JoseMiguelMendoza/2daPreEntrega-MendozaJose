<div class="positionTitle">
    <h1 class="productsTitle">Productos a la venta</h1>
</div>
<div class="tableContainer" style="position: relative;">
    <table>
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre del producto</th>
                <th>Descripción</th>
                <th>Stock</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th> - </th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this.code}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td><button class="buttonAddToCart" data-product-id="{{this._id}}">Agregar al carrito</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<div class="buttonsContainer">
    {{#if paginateInfo.hasPrevPage}}
    <div class="boxA">
        <a href="{{paginateInfo.prevLink}}">Anterior</a>
    </div>
    {{/if}}
    {{#if paginateInfo.hasNextPage}}
    <div class="boxA">
        <a href="{{paginateInfo.nextLink}}">Siguiente</a>
    </div>   
    {{/if}}
</div>

<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/products.js"></script>